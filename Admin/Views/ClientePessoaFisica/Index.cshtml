@model IEnumerable<Entities.Tables.Pessoa>
@{
  ViewBag.Title = "Index";
}
<section class="content-header">
  <h1>
    Clientes Pessoa-Física
    <a class="btn btn-default btn-flat" href="@Url.Action("Create", "ClientePessoaFisica")" role="button" title="Novo Cliente Pessoa-Física">Novo Cliente</a>
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      @if (TempData["Success"] != null)
      {
        <div class="alert alert-success alert-dismissable"data-dismiss="alert" aria-label="close">
          <strong>@TempData["Success"]</strong>
        </div>
      }
      @if (TempData["Error"] != null)
      {
        <div class="alert alert-danger alert-dismissable"data-dismiss="alert" aria-label="close">
          <strong>@TempData["Error"]</strong>
        </div>
      }
      <section class="content">
        <div class="box box-primary">
          <div class="box-body">
            <div class="table">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr>
                    <th style="text-align:justify">
                      Nome Completo:
                    </th>
                    <th>
                      RG:
                    </th>
                    <th>
                      CPF:
                    </th>
                    <th>
                      Data de Nascimento:
                    </th>
                    
                    <th>
                      Email:
                    </th>
                    <th>
                      Telefone:
                    </th>
                    <th>
                      Celular:
                    </th>
                    @*<th>
                      Status:
                    </th>
                    @*<th>
                      Limite de Credito:
                    </th>*@
                    @*<th>
                      Tipo Pessoa:
                    </th>
                    <th>
                      Papel Pessoa:
                    </th>
                      *@
                    <th>
                      <i class="fa fa-gear fa-fw"></i>
                    </th>
                  </tr>
                </thead>
                <tbody>
                  @if (Model != null)
                  {
                    foreach (var item in Model)
                    {
                      if (item.Status)
                      {
                      <tr>
                        <td >
                          @Html.DisplayFor(modelItem => item.NomeCompleto)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.RG)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.CPF)
                        </td>
                        <td>
                         @String.Format("{0:dd/MM/yyyy}", item.DataNascimento)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.Celular)
                        </td>
                        @*<td>
                          @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                          @String.Format("{0:c}", item.LimiteCredito)
                        </td>

                        <td>
                          @Html.DisplayFor(modelItem => item.TipoPessoa.Desc)
                        </td>
                        <td>
                          @Html.DisplayFor(modelItem => item.PapelPessoa.Desc)
                        </td>*@
                        <td style="align-items:center">
                          <a href="@Url.Action("Edit", "ClientePessoaFisica", new { id = item.Id, viewName = "IndexCF" })" title="Editar"><span class="label label-info">Editar</span></a>
                          <br />
                          <a href="@Url.Action("Details", "ClientePessoaFisica", new { id = item.Id })" title="Detalhes"><span class="label label-warning"><i class="fa fa-info-circle"></i></span></a>
                          <br />
                          <a class="btn-delete" href="#" data-action="@Url.Action("Delete", "ClientePessoaFisica", new { id = item.Id })" data-toggle="modal" data-target="#confirmation-delete-modal" title="Deletar"><span class="label label-danger">DEL</span></a>
                        </td>
                      </tr>
                      }
                    }
                  }
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </section>
    </div>
  </div>


  <div class="modal fade" id="confirmation-delete-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Deletar Registro?</h4>
        </div>
        <div class="modal-body">
          Essa ação é irreversível. Deletar?
        </div>
        <div class="modal-footer">
          <form id="form-delete" method="post" novalidate="novalidate">
            @Html.AntiForgeryToken()
            <input type="submit" value="Sim" class="btn btn-success btn-flat" />
            <a href="#" class="btn btn-danger btn-flat" data-dismiss="modal">Não</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  setactivemenu('#a-clientepessoafisica');
</script>