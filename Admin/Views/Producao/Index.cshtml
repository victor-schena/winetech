@model IEnumerable<Entities.Tables.Producao>

@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
  <h1>
    Producao
    <a class="btn btn-default btn-flat" href="@Url.Action("Create", "Producao")" role="button" title="Producao">Nova Produção</a>
  </h1>
</section>
@if (TempData["Success"] != null)
{
  <div class="alert alert-success alert-dismissable" data-dismiss="alert" aria-label="close">
    <strong>@TempData["Success"]</strong>
  </div>
}
@if (TempData["Error"] != null)
{
  <div class="alert alert-danger alert-dismissable" data-dismiss="alert" aria-label="close">
    <strong>@TempData["Error"]</strong>
  </div>
}
<section class="content">
  <div class="box box-primary">
    <div class="box-body">
      <div class="table">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>
                Classe:
              </th>
              <th>
                Tipo:
              </th>
              <th>
                Uva:
              </th>
              <th>
                Data de fabricação:
              </th>

              <th>
                Volume:
              </th>
              <th>
                Preço/Kg Uva:
              </th>
              <th>
                Preço/Kg Açucar:
              </th>
              <th>
                Preço Garrafa:
              </th>
              <th></th>
            </tr>
          </thead>
          <tbody>

            @foreach (var item in Model)
            {
              <tr>
                <td>
                  @Html.DisplayFor(modelItem => item.Classe.Descricao)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.Tipo.Descricao)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.Uva.Descricao)
                </td>
                <td>
                  @String.Format("{0:dd/MM/yyyy}", item.DataCriacao)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td>
                  @String.Format("{0:c} ",item.KgUva)
                </td>
                <td>
                  @String.Format("{0:c} ", item.KgAcucar)
                </td>
                <td>
                  @String.Format("{0:c} ", item.Vasilhame)
                </td>
                <td>
                  <a href="@Url.Action("Edit", "Producao", new { id = item.Id })" title="Editar"><span class="label label-info"><i class="fa fa-pencil-square-o "></i></span></a>
                  <a href="@Url.Action("Details", "Producao", new { id = item.Id })" title="Detalhes"><span class="label label-warning"><i class="fa fa-info-circle"></i></span></a>
                  <a href="#" data-action="@Url.Action("Delete", "Producao", new { id = item.Id })" data-toggle="modal" data-target="#confirmation-delete-modal" title="Deletar"><span class="label label-danger"><i class="fa fa-trash"></i></span></a>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
<div class="modal fade" id="confirmation-delete-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Deletar Registro?</h4>
      </div>
      <div class="modal-body">
        Essa ação é irreversível. Deletar?
      </div>
      <div class="modal-footer">
        <form id="form-delete" method="post" novalidate="novalidate">
          @Html.AntiForgeryToken()
          <input type="submit" value="Sim" class="btn btn-success btn-flat" />
          <a href="#" class="btn btn-danger btn-flat" data-dismiss="modal">Não</a>
        </form>
      </div>
    </div>
  </div>
</div>