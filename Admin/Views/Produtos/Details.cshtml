@model Entities.Tables.Produto
@using Admin.Functions
@{
  ViewBag.Title = "Details";
  var imgsize = Constants.ImageFileSize / 1024;
}
<section class="content-header">
  <h1>
    Produtos
    <small>detalhes do produto</small>
  </h1>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-body">
      <div>
        <h4>Produto</h4>
        <hr />
        @if (!string.IsNullOrEmpty(Model.Imagem))
        {
          <div class="form-group">
            <a class="thumb" href="@string.Format("{0}/{1}/{2}", Constants.UrlDominioEstaticoUploads, "Produtos", Model.Imagem)" title="Visualizar imagem original" target="_blank">
              <img src="@string.Format("{0}/{1}/{2}", Constants.UrlDominioEstaticoUploads, "Produtos", Model.Imagem)" class="thumbnail quadrada" />
              <i class="fa fa-search-plus fa-fw"></i>
            </a>
            @Html.HiddenFor(model => model.Imagem)
            <p>@Html.ValidationMessageFor(model => model.Imagem, "", new { @class = "text-danger" })</p>
          </div>
        }
        <dl class="dl-horizontal">

          <dt>
            País:
          </dt>

          <dd>
            @Html.DisplayFor(model => model.Pais.Nome)
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.Safra.Ano):
          </dt>

          <dd>
            @Html.DisplayFor(model => model.Safra.Ano)
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.Nome):
          </dt>

          <dd>
            @Html.DisplayFor(model => model.Nome)
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.Descricao):
          </dt>

          <dd class="glyphicon-align-center">
            @Html.DisplayFor(model => model.Descricao)
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.Uvas):
          </dt>
          <dd>

            @foreach (var item in @Model.Uvas)
            {
              @item.Descricao <br />
            }
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.Classe):
          </dt>

          <dd>
            @Html.DisplayFor(model => model.Classe.Descricao)
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.Teor_Alcolico):
          </dt>

          <dd>
            @Html.DisplayFor(model => model.Teor_Alcolico) %
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.Tipo):
          </dt>

          <dd>
            @Html.DisplayFor(model => model.Tipo.Descricao)
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.CustoUnitario):
          </dt>

          <dd>
            @Html.DisplayFor(model => model.CustoUnitario)
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.Quantidade):
          </dt>

          <dd>
            @if (Model.Quantidade == 1)
            {
              @Model.Quantidade <small>Unidade</small>
            }
            else
            {
              @Model.Quantidade <small>Unidades</small>
            }
          </dd>

          <dt>
            Preco de venda:
          </dt>

          <dd>
            R$
            @Html.DisplayFor(model => model.PrecoVenda)
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.Volume):
          </dt>

          <dd>
            @Html.DisplayFor(model => model.Volume)
          </dd>

          <dt>
            @Html.DisplayNameFor(model => model.DataValidade):
          </dt>

          <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.DataValidade)
          </dd>
        </dl>
      </div>
    </div>
  </div>
</section>
<p>
  <a href="@Url.Action("Edit", "Produtos", new { id = Model.Id })" title="Editar"><span class="label label-info">Editar</span></a>
  <a href="@Url.Action("Index", "Produtos")" title="Index"><span class="label label-info">Listar</span></a>
</p>
