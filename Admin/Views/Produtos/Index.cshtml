@model IEnumerable<Entities.Tables.Produto>
@using Admin.App_Code;
@using Microsoft.AspNet.Identity
@{
  /**/

  ViewBag.Title = "Index";
}

<script type="text/javascript" language="javascript">
  var pedidoId;
  if (window.location.pathname.match(/\d+$/) > 0)
    pedidoId = window.location.pathname.match(/\d+$/);
  else
    pedidoId = $('#pedidoId').val();
  function enviarItem(Id) {
    $.post('/Pedido/Create',
      { PedidoId: $('#pedidoId').val(), ProdutoId: Id, Quantidade: 1 },
      function (data) {
        success:
        $('#cart-details').attr("href", "/Pedido/Details/" + data);
        $('#pedidoId').val(data);
        $('#btnAddedToCart').click();
        $('#cart-details').show();
      }, 'json');
  }
</script>
<div>
  <button id="btnAddedToCart" type="button" style="display:none;" class="btn btn-success" data-toggle="modal" data-target="#modal-success">
    Launch Success Modal
  </button>
  <div class="modal modal-success fade" id="modal-success" style="display: none;">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
          <h4 class="modal-title">Sucesso!</h4>
        </div>
        <div class="modal-body">
          <p>Produto adicionado ao carrinho!</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">OK</button>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="content-header">
  <h1>
    Produtos
    <a class="btn btn-default btn-flat" href="@Url.Action("Create", "Produtos")" role="button" title="Novo Produto">Novo Produto</a>
    <a class="btn btn-default btn-flat" href="@Url.Action("Clear", "Produtos")" role="button" title="Novo Produto">Limpar Carrinho</a>

  </h1>
  @if (ViewBag.PedidoId > 0)
  {
    <a class="btn btn-default btn-flat" href="/Pedido/Details/@ViewBag.PedidoId" id="cart-details" title="Visualizar Pedido"><b>Clique aqui para visualizar este pedido.</b></a>
  }
  <a style="display:none;" class="btn btn-default btn-flat" id="cart-details" title="Visualizar Pedido"><b>Clique aqui para visualizar este pedido.</b></a>
  <form type="post" action="fakebullshit" id="mainForm">
    <input id="pedidoId" type="number" value="" hidden="hidden" />
  </form>
</section>
@if (TempData["Success"] != null)
{
  <div class="alert alert-success alert-dismissable" data-dismiss="alert" aria-label="close">
    <strong>@TempData["Success"]</strong>
  </div>
}
@if (TempData["Error"] != null)
{
  <div class="alert alert-danger alert-dismissable" data-dismiss="alert" aria-label="close">
    <strong>@TempData["Error"]</strong>
  </div>
}
<section class="content">
  <div class="box box-primary">
    <div class="box-body">
      <div class="table">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>
                País:
              </th>
              <th>
                Safra:
              </th>
              <th>
                Nome:
              </th>
              <th>
                Descricao:
              </th>
              <th>
                Classe:
              </th>
              <th>
                Teor Alcolico(%):
              </th>
              <th>
                Tipo:
              </th>
              <th>
                Custo Unitario:
              </th>
              <th>
                Volume:
              </th>
              <th>
                Preco de Venda:
              </th>
              <th>
                Data Validade:
              </th>
              <th>
                <i class="fa fa-gear fa-fw"></i>
              </th>
            </tr>
          </thead>
          <tbody>
            @foreach (var item in Model)
            {
              <tr>
                <td>
                  @Html.DisplayFor(modelItem => item.Pais.Nome)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.Safra.Ano)
                </td>
                <td title="@item.Nome">
                  @if (item.Nome.Length > 30)
                  {
                    item.Nome = item.Nome.Substring(0, 30) + "...";
                  }
                  @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td title="@item.Descricao">
                  @if (item.Descricao.Length > 30)
                  {
                    item.Descricao = item.Descricao.Substring(0, 30) + "...";
                  }
                  @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.Classe.Descricao)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.Teor_Alcolico) %
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.Tipo.Descricao)
                </td>
                <td>
                  @String.Format("{0:c} ", item.CustoUnitario)
                </td>
                <td>
                  @Html.DisplayFor(modelItem => item.Volume)
                </td>
                <td id="tdPrecoProduto">
                  @String.Format("{0:c} ", item.PrecoVenda)
                </td>
                <td>
                  @String.Format("{0:dd/MM/yyyy}", item.DataValidade)
                </td>
                <td style="text-align:center;">
                  <a href="@Url.Action("Edit", "Produtos", new { id = item.Id })" title="Editar"><span class="label label-info"><i class="fa fa-pencil-square-o "></i></span></a>
                  <a href="@Url.Action("Details", "Produtos", new { id = item.Id })" title="Detalhes"><span class="label label-warning"><i class="fa fa-info-circle"></i></span></a>
                  <a href="#" data-action="@Url.Action("Delete", "Produtos", new { id = item.Id })" data-toggle="modal" data-target="#confirmation-delete-modal" title="Deletar"><span class="label label-danger"><i class="fa fa-trash"></i></span></a>
                  <a onclick="enviarItem(@item.Id)"><span class="label label-success"><i class="fa fa-cart-plus"></i></span></a>
                </td>
              </tr>
            }
          </tbody>
        </table>
        <div id="divcarrinhoproduto" style="display:none">
        </div>
      </div>
    </div>
  </div>
  <!-- Modalhref="Url.Action("Create", "Pedido", new { id = item.Id })" -->
  <div class="modal fade" id="confirmation-delete-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Deletar Registro?</h4>
        </div>
        <div class="modal-body">
          Essa ação é irreversível. Deletar?
        </div>
        <div class="modal-footer">
          <form id="form-delete" method="post" novalidate="novalidate">
            @Html.AntiForgeryToken()
            <input type="submit" value="Sim" class="btn btn-success btn-flat" />
            <a href="#" class="btn btn-danger btn-flat" data-dismiss="modal">Não</a>
          </form>
        </div>
      </div>
    </div>
  </div>

