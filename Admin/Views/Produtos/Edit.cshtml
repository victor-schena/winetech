@model Entities.Tables.Produto

@{
  ViewBag.Title = "Edit";
}

<section class="content-header">
  <h1>
    Produtos
    <small>Edição</small>
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="box box-primary">
        @using (Html.BeginForm())
        {
          @Html.AntiForgeryToken()

          <div class="box box-body">
            <h4><b>Produto</b></h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
              @Html.LabelFor(model => model.Nome, "Nome:", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
              @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.Descricao, "Descrição:", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.TextAreaFor(model => model.Descricao, 10, 25, htmlAttributes: new { @class = "form-control", @style = "width:100% ; height:100%; resizable:false" })
              @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.Uva, "Uva:", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.EditorFor(model => model.Uva, new { htmlAttributes = new { @class = "form-control" } })
              @Html.ValidationMessageFor(model => model.Uva, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Classe, "Classe:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="form-group">
              @Html.EditorFor(model => model.Classe, new { htmlAttributes = new { @class = "form-control" } })
              @Html.ValidationMessageFor(model => model.Classe, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.Teor_Alcolico, "Teor Alcolico(%):", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.EditorFor(model => model.Teor_Alcolico, new { htmlAttributes = new { @class = "form-control" } })
              @Html.ValidationMessageFor(model => model.Teor_Alcolico, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.Tipo, "Tipo:", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control" } })
              @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.CustoUnitario, "Custo:", htmlAttributes: new { @class = "control-label col-md-2" })

              @Html.EditorFor(model => model.CustoUnitario, new { htmlAttributes = new { @class = "form-control " } })
              @Html.ValidationMessageFor(model => model.CustoUnitario, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.Quantidade, "Quantidade:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="form-group">
              @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
              @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
              @Html.LabelFor(model => model.PrecoVenda, "Preço de venda:", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.EditorFor(model => model.PrecoVenda, new { htmlAttributes = new { @class = "form-control" } })
              @Html.ValidationMessageFor(model => model.PrecoVenda, "", new { @class = "text-danger" })
              <div class="form-group">
                @Html.LabelFor(model => model.Volume, "Volume", htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Volume, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Volume, "", new { @class = "text-danger" })
              </div>
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.DataValidade, "Data de Validade:", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.EditorFor(model => model.DataValidade, new { htmlAttributes = new { @class = "form-control"} })
              @Html.ValidationMessageFor(model => model.DataValidade, "", new { @class = "text-danger" })

              @*@Html.LabelFor(model => model.Status, "Status:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-3">
                  <div class="checkbox">
                    @Html.EditorFor(model => model.Status)
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                  </div>
                </div>*@
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.PaisId, "Pais", htmlAttributes: new { @class = "control-label col-md-2" })
              @Html.DropDownList("PaisId", null, htmlAttributes: new { @class = "form-control" })
              @*@Html.EditorFor(model=>model.Pais.Nome)*@
              @Html.ValidationMessageFor(model => model.PaisId, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
              @Html.LabelFor(model => model.SafraId, "Safra", new { @class = "control-label col-md-2" })
              @Html.DropDownList("SafraId", null, htmlAttributes: new { @class = "form-control" })
              @*@Html.EditorFor(model=>model.Safra.Ano)*@
              @Html.ValidationMessageFor(model => model.SafraId, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
              <div class="inline">
                <a class="btn btn-default btn-flat" href="@Url.Action("Index", "Produtos")" role="button" title="Voltar a Lista">Voltar à lista</a>
                <input type="submit" value="Salvar" class="btn btn-default btn-flat" />
              </div>
            </div>
          </div>
        }
      </div>
    </div>
  </div>
</section>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
  @Scripts.Render("~/bundles/jquerymask")
}
