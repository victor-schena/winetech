@model Admin.Models.ApplicationUser
<section class="content-header">
  <h1>
    Usuários
    <small>perfis do usuário [@ViewBag.User]</small>
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="box box-primary">
        <div class="box-body">
          <div class="table">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Perfil</th>
                </tr>
              </thead>
              <tbody>
                @foreach (var item in ViewBag.RoleNames)
                {
                  <tr class="odd gradeX">
                    <td>
                      @item
                    </td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
        <div class="box-footer">
          <a class="btn btn-danger btn-flat" href="@Url.Action("Index", "Users")" role="button" title="Voltar">Voltar</a>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  setactivemenu('#a-users');
</script>
