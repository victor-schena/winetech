@model IEnumerable<Admin.Models.ApplicationRole>
<section class="content-header">
  <h1>
    Perfis
    <a class="btn btn-default btn-flat" href="@Url.Action("Create", "Roles")" role="button" title="Novo Perfil">novo perfil</a>
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      @if (TempData["Success"] != null)
      {
        <div class="alert alert-success alert-dismissable" data-dismiss="alert" aria-label="close">
          <strong>@TempData["Success"]</strong>
        </div>
      }
      @if (TempData["Error"] != null)
      {
        <div class="alert alert-danger alert-dismissable" data-dismiss="alert" aria-label="close">
          <strong>@TempData["Error"]</strong>
        </div>
      }
      <div class="box box-primary">
        <div class="box-body">
          <div class="table">
            <table class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th>Nome</th>
                  <th>Descrição</th>
                  <th class="center" width="20%">
                    <i class="fa fa-gear fa-fw"></i>
                  </th>
                </tr>
              </thead>
              <tbody>
                @foreach (var item in Model)
                {
                  <tr class="odd gradeX">
                    <td>
                      @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                      @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td align="center">
                      <a href="@Url.Action("Edit", "Roles", new { id = item.Id })" title="editar"><span class="label label-info">EDIT</span></a>
                      <a class="btn-delete" href="#" data-action="@Url.Action("Delete", "Roles", new { id = item.Id })" data-toggle="modal" data-target="#confirmation-delete-modal" title="deletar"><span class="label label-danger">DEL</span></a>
                      <a href="@Url.Action("Credentials", "Roles", new { id = item.Id })" title="credenciais do perfil"><span class="label label-success"><i class="fa fa-fw fa-key"></i></span></a>
                      <a href="@Url.Action("Details", "Roles", new { id = item.Id })" title="usuários cadastrados no perfil"><span class="label label-warning"><i class="fa fa-fw fa-user"></i></span></a>
                    </td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="confirmation-delete-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Deletar Perfil?</h4>
        </div>
        <div class="modal-body">
          Essa ação é irreversível. Deletar?
        </div>
        <div class="modal-footer">
          <form id="form-delete" method="post" novalidate="novalidate">
            @Html.AntiForgeryToken()
            <input type="submit" value="Sim" class="btn btn-success btn-flat" />
            <a href="#" class="btn btn-danger btn-flat" data-dismiss="modal">Não</a>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<script>
  setactivemenu('#a-roles');
</script>
