@model Admin.Models.RoleViewModel
<section class="content-header">
  <h1>
    Credenciais
    <small>configurar credenciais do perfil</small>
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-lg-12">
      <div class="box box-primary">
        @using (Html.BeginForm("Credentials", "Roles", FormMethod.Post))
        {
          @Html.AntiForgeryToken()
          <div class="box-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Name)
            @Html.HiddenFor(model => model.Description)
            <div class="form-group">
              <label>Selecione as permissões de um <i>@Model.Name</i></label>
              @foreach (var item in ViewBag.Credentials)
              {
                <div class="checkbox">
                  <label>
                    <input type="checkbox" name="SelectedCredentials" checked="@item.Selected" value="@item.Value">
                    @if (item.Selected)
                    {<small class="text-green">@item.Text</small> }
                  else
                  { <small class="text-muted">@item.Text</small>}
                  </label>
                </div>
              }
            </div>
            <div class="form-group">
              <input type="submit" value="Salvar" class="btn btn-success btn-flat" />
              <a class="btn btn-danger btn-flat" href="@Url.Action("Index", "Roles")" role="button" title="Voltar">Voltar</a>
            </div>
          </div>
        }
      </div>
    </div>
  </div>
</section>
