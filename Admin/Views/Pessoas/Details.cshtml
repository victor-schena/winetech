          <dd>
            @Html.DisplayFor(model => model.Celular)
          </dd>

          <dt>
            Status:
          </dt>

          <dd>
            @Html.DisplayFor(model => model.Status)
          </dd>

          <dt>
            Limite de Crédito:
          </dt>

          <dd>
            @Html.DisplayFor(model => model.LimiteCredito)
          </dd>

          <dt>
            Tipo Pessoa:
