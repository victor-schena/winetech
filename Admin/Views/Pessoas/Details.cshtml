@model Entities.Tables.Pessoa

@{
    ViewBag.Title = "Details";
}
@if (Model != null)
{
  string caminho = string.Empty;
  if ((Model.TipoPessoaId == 1)&&(Model.PapelPessoaId==1))
  {
    <h2>Detalhes Cliente Pessoa-Física</h2>
    caminho = "IndexCF";
  }
  if (((Model.TipoPessoaId == 2) && (Model.PapelPessoaId == 1)))
  {
    <h2>Detalhes Cliente Pessoa-Juridica</h2>
    caminho = "IndexCJ";
  }
  if (((Model.TipoPessoaId == 1) && (Model.PapelPessoaId == 2)))
  {
    <h2>Detalhes Fornecedor Pessoa-Fisica</h2>
    caminho = "IndexFF";
  }
  if (((Model.TipoPessoaId == 2) && (Model.PapelPessoaId == 2)))
  {
    <h2>Detalhes Fornecedor Pessoa-Juridica</h2>
    caminho = "IndexFJ";
  }
<div class="box box-default" style="width:auto">
    <hr />
    <dl class="dl-horizontal">
      
        @if (Model.TipoPessoaId == 1)
        {
        

        <dt>
