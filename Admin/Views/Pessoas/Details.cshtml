        <dd>
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>

        <dt>
            RG:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RG)
        </dd>

        <dt>
            CPF:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CPF)
        </dd>

        <dt>
            Data de Nascimento:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>

       
        <dt>
            E-mail:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Telefone:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Telefone)
        </dd>

        <dt>
            Celular:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Celular)
        </dd>

        <dt>
            Status:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            Limite de Crédito:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LimiteCredito)
        </dd>

        <dt>
            Tipo Pessoa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TipoPessoaId)
        </dd>

        <dt>
            Papel Pessoa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PapelPessoaId)
        </dd>

        }
        else
        {
          <dt>
            Razao Social:
          </dt>

          <dd>
            @Html.DisplayFor(model => model.RazaoSocial)
          </dd>

          <dt>
            Nome Fantasia:
          </dt>

          <dd>
            @Html.DisplayFor(model => model.NomeFantasia)
          </dd>

          <dt>
            CNPJ:
          </dt>

          <dd>
            @Html.DisplayFor(model => model.CNPJ)
          </dd>

          <dt>
            E-mail
          </dt>

          <dd>
            @Html.DisplayFor(model => model.Email)
          </dd>

          <dt>
